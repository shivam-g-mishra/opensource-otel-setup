# Environment Configuration for Observability Stack
# Generated by Ansible on {{ ansible_date_time.iso8601 }}

# =============================================================================
# Grafana Configuration
# =============================================================================
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD={{ grafana_admin_password }}
GF_SERVER_ROOT_URL=http://{{ ansible_host }}:3000

# =============================================================================
# Stack Versions
# =============================================================================
OTEL_COLLECTOR_VERSION={{ otel_collector_version }}
GRAFANA_VERSION={{ grafana_version }}
PROMETHEUS_VERSION={{ prometheus_version }}
LOKI_VERSION={{ loki_version }}
TEMPO_VERSION={{ tempo_version }}
MIMIR_VERSION={{ mimir_version }}

# =============================================================================
# Retention Settings
# =============================================================================
PROMETHEUS_RETENTION={{ prometheus_retention }}
TEMPO_RETENTION_HOURS={{ tempo_retention_hours | default('720') }}
LOKI_RETENTION_HOURS={{ loki_retention_hours | default('168') }}
MIMIR_RETENTION_HOURS={{ mimir_retention_hours | default('744') }}

{% if deployment_type == 'scalable' %}
# =============================================================================
# Scalable Deployment Settings
# =============================================================================
OTEL_GATEWAY_REPLICAS={{ otel_gateway_replicas | default('2') }}
OTEL_PROCESSOR_REPLICAS={{ otel_processor_replicas | default('2') }}
KAFKA_RETENTION_HOURS=24
KAFKA_NUM_PARTITIONS=12
{% endif %}
